FROM node:lts-alpine
RUN apk update && apk upgrade --no-cache
WORKDIR /app/frontend

# Копируем package.json если есть, иначе создаем пустой билд
COPY frontend/package.json .
RUN npm install || echo "No package.json, skipping install"

COPY frontend .
RUN npm run build || echo "No build script, skipping build"

FROM nginx:alpine
COPY --from=0 /app/frontend/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
